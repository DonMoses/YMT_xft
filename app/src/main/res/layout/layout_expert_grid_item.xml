<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/expert_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/expert_name"
            android:layout_marginLeft="18dp"
            android:id="@+id/expert_type"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/expert_name"
            android:layout_toRightOf="@id/expert_name"
            android:hint="type"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="13.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/expert_name"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/consulting_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="咨询人数"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/waiting_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="等待人数"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>