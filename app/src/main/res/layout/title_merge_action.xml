<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#06A1D9"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/merge_title_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/merge_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/merge_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="消防论坛"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/merge_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_action" />

    <ImageButton
        android:id="@+id/merge_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/merge_action_btn"
        android:layout_toStartOf="@id/merge_action_btn"
        android:background="@drawable/icon_search" />
</RelativeLayout>