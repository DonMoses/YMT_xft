<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6.18dp">

    <TextView
        android:id="@+id/undo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/undo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.09dp"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/undo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.09dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/undo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/undo_expert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/undo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.09dp"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6.18dp"
        android:background="@color/material_blue_grey_800" />

</LinearLayout>