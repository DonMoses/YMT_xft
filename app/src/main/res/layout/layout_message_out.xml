<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_chat_txt_right"
            android:ellipsize="end"
            android:hint="test message out"
            android:maxLines="20"
            android:minHeight="42dp"
            android:textColor="@color/material_blue_grey_950"
            android:textColorHint="@color/material_blue_grey_950"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ymt.demo1.customViews.CircleImageView
                android:id="@+id/header_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/out_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/reply_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="end"
        android:layout_marginRight="5dp"
        android:gravity="5dp"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>