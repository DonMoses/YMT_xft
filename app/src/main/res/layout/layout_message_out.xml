<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ymt.demo1.customViews.CircleImageView
        android:id="@+id/header_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/moses" />

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:minHeight="42dp"
        android:layout_toLeftOf="@id/header_img"
        android:layout_toStartOf="@id/header_img"
        android:background="@drawable/bg_chat_txt_right"
        android:ellipsize="end"
        android:hint="test message out"
        android:maxLines="20"
        android:textColor="@color/material_blue_grey_950"
        android:textColorHint="@color/material_blue_grey_950"
        android:textSize="14sp" />

</RelativeLayout>