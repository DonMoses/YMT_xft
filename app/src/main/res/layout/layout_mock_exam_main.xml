<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.ymt.demo1.customViews.MyTitle
        android:id="@id/my_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/holo_blue_dark"
        mytitle:setLeftActionIcon="@drawable/back_normal"
        mytitle:setRightIconL="@drawable/icon_search"
        mytitle:setTitleTxt="模拟试题" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/view_all_level001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6.18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一级消防工程师模拟题"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=">显示全部"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="13.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.618dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_level001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_all_level002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6.18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二级消防工程师模拟题"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=">显示全部"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="13.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.618dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_level002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_all_level003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6.18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初级消防工程师模拟题"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=">显示全部"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="13.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.618dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_level003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_all_level004"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6.18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中级消防工程师模拟题"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=">显示全部"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="13.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.618dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_level004"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>