<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="3dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="高层建筑安全宣传标语"
        android:minHeight="32dp"
        android:textColor="@color/material_blue_grey_950"
        android:textColorHint="@color/material_blue_grey_950"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:ellipsize="end"
        android:hint="答: 1、人人防灾防火，家家平安快乐。2、勿忘火警119，危险时刻真朋友。3、消防设施别乱动，灭火救人有大用。"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@color/material_blue_grey_950"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/collected_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/collect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@null"
            android:padding="11dp"
            android:src="@drawable/icon_collection_normal" />

        <TextView
            android:id="@+id/collected_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2332人"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/collected_layout"
        android:layout_toRightOf="@id/collected_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="false"
            android:padding="11dp"
            android:src="@drawable/icon_comment_count_normal" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="4782人"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>