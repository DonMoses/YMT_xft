<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="6.18dp">

    <TextView
        android:id="@+id/topic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_text_blue_shape1o4"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/topic_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.09dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3.09dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/topic_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.18dp"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/topic_opts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/topic_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.18dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>