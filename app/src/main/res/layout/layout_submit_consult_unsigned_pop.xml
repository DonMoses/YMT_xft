<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="150dp"
    android:background="@drawable/skyblue_editpage_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.18dp"
        android:layout_marginStart="16.18dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="您的问题已收到！"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.18dp"
        android:layout_marginStart="16.18dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:text="系统已自动为您生成"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.18dp"
        android:layout_marginStart="16.18dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="用户名："
            android:textColor="@color/material_blue_grey_800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/psw_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="密码："
            android:textColor="@color/material_blue_grey_800"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/edit_psw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16.18dp"
        android:layout_marginStart="16.18dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:text="建议您修改账号密码"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:text="确定"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

</LinearLayout>