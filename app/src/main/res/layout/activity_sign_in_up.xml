<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6.18dp"
            android:layout_weight="2">

            <com.ymt.demo1.customViews.MyTitle
                android:id="@id/my_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_dark"
                mytitle:setLeftActionIcon="@drawable/back_normal" />
        </FrameLayout>

        <com.ymt.demo1.customViews.SignSwitchView
            android:id="@+id/sign_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:layout_weight="3"
            android:background="@drawable/bg_corner_3_white"
            android:padding="0.618dp">

        </com.ymt.demo1.customViews.SignSwitchView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    </FrameLayout>

</LinearLayout>