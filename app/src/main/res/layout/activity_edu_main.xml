<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAF9"
    android:orientation="vertical">

    <com.ymt.demo1.customViews.MyTitle
        android:id="@id/my_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/holo_blue_dark"
        mytitle:setLeftActionIcon="@drawable/back_normal"
        mytitle:setRightActIconR="@drawable/icon_action_more"
        mytitle:setRightIconL="@drawable/icon_search"
        mytitle:setTitleTxt="教育平台" />

    <LinearLayout
        android:id="@+id/next_test_timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@drawable/icon_timer"
                android:drawableStart="@drawable/icon_timer"
                android:text="距"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/next_exam_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="2015"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="年"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/next_exam_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="7"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="月"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/next_exam_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1日"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="n"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="天"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="n"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="小时"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="n"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="分"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="n"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="@color/material_blue_grey_800"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="秒"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pastExams"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_past_exams" />

            <ImageView
                android:id="@+id/anologExams"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_mock_examination" />
            <!--<ImageView-->
            <!--android:id="@+id/anologExams"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginBottom="3dp"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/shape_edu_analog_exams"-->
            <!--android:gravity="center"-->
            <!--android:text="模拟考试"-->
            <!--android:textColor="@android:color/white" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myStudy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_my_study" />

            <ImageView
                android:id="@+id/studyDatum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_learning_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appGuide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_guide" />

            <ImageView
                android:id="@+id/trainVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_training_video" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/examInterpret"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_analysis_paper" />

            <ImageView
                android:id="@+id/eduMore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3.09dp"
                android:layout_weight="1"
                android:src="@drawable/icon_edu_more" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>