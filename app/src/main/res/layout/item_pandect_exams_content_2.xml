<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_file_pdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:hint="example_exam_info"
            android:minHeight="34dp"
            android:padding="3.09dp"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@color/material_blue_grey_800"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/download_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="6.18dp"
            android:layout_marginRight="6.18dp"
            android:background="#F0F0F0"
            android:gravity="end|bottom"
            android:hint="example_exam_info"
            android:textColor="@color/material_blue_grey_800"
            android:textColorHint="@color/material_blue_grey_800" />
    </LinearLayout>


</LinearLayout>

