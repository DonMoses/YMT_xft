<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA"
    android:orientation="vertical">

    <com.ymt.demo1.customViews.MyTitle
        android:id="@id/my_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        mytitle:setLeftActionIcon="@drawable/back_normal"
        mytitle:setRightActIconR="@drawable/icon_search_more"
        mytitle:setRightIconL="@drawable/icon_search"
        mytitle:setTitleTxt="注册" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input_box"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:stretchColumns="2">

        <TableRow
            android:layout_height="28dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center_vertical"
                android:text="+86"
                android:textColor="#4169E1" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="12sp" />
        </TableRow>

        <TableRow android:gravity="center_vertical">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_account" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_account"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="账号为4~20位字符"
                android:inputType="textPersonName"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_height="28dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_psw" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_psw"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="密码为6~18位数字和字母组合"
                android:inputType="textPassword"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="12sp" />
        </TableRow>

        <TableRow android:gravity="center_vertical">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_psw" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/re_input_psw"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:text="注:本平台为消防安全平台，所有内容均为国家发行的合规规定，请认真阅读《消防通安全协议》再进行下一步注册操作。"
        android:textColor="#4169E1"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/agreement_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="我已阅读并同意《消防通安全协议》"
            android:textColor="#4169E1"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/do_sign_btn"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="30dp"
        android:background="#06A1D9"
        android:text="注 册" />

</LinearLayout>