        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="#06A1D9"
        android:text="注 册" />

    <LinearLayout
        android:id="@+id/liscense_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <com.ymt.demo1.customViews.MyCheckView
            android:id="@+id/switch_liscense"
            android:layout_width="14dp"
            android:layout_height="14dp"
            mycheckview:backgroundIcon="@drawable/corner_text_white_shape1o4"
            mycheckview:checkIcon="@drawable/icon_checked" />

        <TextView
            android:id="@+id/licence_txt"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/license"
            android:textColor="#4169E1"
            android:textSize="12sp" />

    </LinearLayout>

