<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycheckview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_input_box"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:stretchColumns="2">

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="38dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_account" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_account"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入你的昵称"
                android:inputType="textPersonName"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="14sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="38dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_psw" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_psw"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入你的密码"
                android:inputType="textPassword"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="14sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="38dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_psw" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/re_input_psw"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请再次输入你的密码"
                android:inputType="textPassword"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="14sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center_vertical"
                android:text="+86"
                android:textColor="#4169E1" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入你的手机号"
                android:inputType="phone"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/get_check_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3.09dp"
                android:layout_marginRight="3.09dp"
                android:background="@android:color/holo_blue_dark"
                android:paddingBottom="6.18dp"
                android:paddingLeft="3.09dp"
                android:paddingRight="3.09dp"
                android:paddingTop="6.18dp"
                android:text="获取验证码"
                android:textColor="@android:color/white" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="38dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/icon_check_num" />

            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#7B68EE" />

            <EditText
                android:id="@+id/input_check_nums"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入你的验证码"
                android:inputType="phone"
                android:textColor="@color/material_blue_grey_800"
                android:textColorHint="#008080"
                android:textSize="14sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light" />

    </TableLayout>

